{% load i18n %}
{% load omoma %}

{% block title %}{% trans "remove all deleted transactions" %}{% endblock %}

{% block content %}

    {% contentbox _("remove all deleted transactions") %}
        <p>{% trans "you are about to remove all the deleted transactions." %}</p>
        <p>{% trans "this action cannot be undone." %}</p>
        <form method="post">
            {% csrf_token %}
            <input type="submit" value="{% trans "yes, remove" %}" />
            <a href="{% url deleted_transactions %}">{% trans "cancel" %}</a>
        </form>
    {% endbox %}

{% endblock content %}

{% load i18n %}
{% load omoma %}

{% contentbox _('debtors and creditors') %}

    {% getioupeerslist %}

    {% if ioupeerslist %}
        <table>
            <tr class="header">
                <th class="links"></th>
                <th class="person">{% trans "person" %}</th>
                <th class="ioutype"></th>
                <th class="amount">{% trans "amount" %}</th>
            </tr>

            {% for peer in ioupeerslist %}
                <tr>
                    <td class="links">
                        <a href="{% url ious recipient=peer.name %}">
                            <img src="/static/icon_details.png" class="icon" />
                        </a>
                    </td>
                    <td class="person">{{ peer.name }}</td>
                    <td class="ioutype">{{ peer.type }}</td>
                    <td class="amount">{{ peer.amount }}</td>
                </tr>
            {% endfor %}

        </table>

    {% else %}
        <p>{% trans "i have no debt and no credit." %}</p>
    {% endif %}

{% endbox %}

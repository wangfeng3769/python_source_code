div#notifications {
border: 1px solid #e66; background: #fdd;
padding: 0; margin: 0 2em 1em 2em;
cursor: default;
}

div#notifications a, div#notifications div {
color: #b11;
font-weight: bold;
display: block;
padding: 3px 2em;
text-decoration: none;
border-bottom: 1px solid #e66;
}

div#notifications a.lastnotification, div#notifications div.lastmessage {
border: 0;
}

div#notifications a:hover, div#notifications div:hover {
background: #eaa;
text-decoration: none;
}

{if $full_page}
{include file="pageheader.htm"}
{insert_scripts files="../js/utils.js,listtable.js"}
<!-- 品牌搜索 -->
{include file="brand_search.htm"}
<form method="post" action="" name="listForm">
<!-- start brand list -->
<div class="list-div" id="listDiv">
{/if}
  <table cellpadding="3" cellspacing="1">
    <tr>

      <th>会员真实姓名</th>
      <th>手机号码</th>
      <th>卡 号</th>
      <th>购买时间</th>
      <th>发送状态</th>
      <th>发卡员</th>
      <th>发送时间</th>
      <th>邮寄地址</th>
      <th>{$lang.handler}</th>
    </tr>
    {foreach from=$brand_list item=brand}
    <tr>
      <td align="center">{$brand.true_name}</td>
      <td align="center">{$brand.phone}</td>
      <td align="center">{$brand.card_number}</td>
      <td align="center">{$brand.buy_time}</td>
      <td align="center">{if $brand.issue_status}已发送{else}待发送{/if}</td>
      <td align="center">{$brand.post_man}</td>
      <td align="center">{$brand.issue_time}</td>
      <td align="center">{$brand.location}</td>
      <td align="center">
        {if $brand.issue_status}<a  title="已发送">已发送</a>{else}<a href="vip_card_issue.php?act=issue&id={$brand.id}" title="发送">发送</a> {/if}
      </td>
    </tr>
    {foreachelse}
    <tr><td class="no-records" colspan="10">{$lang.no_records}</td></tr>
    {/foreach}
    <tr>
      <td align="right" nowrap="true" colspan="6">
      {include file="page.htm"}
      </td>
    </tr>
  </table>

{if $full_page}
<!-- end brand list -->
</div>
</form>


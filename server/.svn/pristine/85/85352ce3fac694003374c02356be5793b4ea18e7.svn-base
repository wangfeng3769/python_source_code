{if $full_page}
{include file="pageheader.htm"}
{insert_scripts files="../js/utils.js,listtable.js"}
<!-- 品牌搜索 -->
{include file="brand_search.htm"}
<form method="post" action="" name="listForm">
<!-- start brand list -->
<div class="list-div" id="listDiv">
{/if}
  <table cellpadding="3" cellspacing="1">
    <tr>
      <th>{$lang[oil_card_id]}</th>
      <th>{$lang[oil_card_password]}</th>
      <th>{$lang[oil_card_provider]}</th>
      <th>{$lang[oil_car_name]}</th>
      <th>{$lang[oil_car_number]}</th>
      <th>{$lang[oil_card_monitor_status]}</th>
      <th>{$lang[oil_card_using_status]}</th>
      <th>{$lang[oil_car_station]}</th>
      <th>{$lang.handler}</th>
    </tr>
    {foreach from=$brand_list item=brand}
    <tr>
      <td class="first-cell" align="center">
        {$brand.card_id}
      </td>
      <td align="center">{$brand.password}</td>
      <td align="center">{$brand.provider}</td>
      <td align="center">{$brand.name}</td>
      <td align="center">{$brand.number}</td>
      <td align="center"><img src="images/{if $brand.monitor_status}yes{else}no{/if}.gif" onclick="listTable.toggle(this, 'toggle_show_monitor', {$brand.id})" /></td>
      <td align="center"><img src="images/{if $brand.using_status}yes{else}no{/if}.gif" onclick="listTable.toggle(this, 'toggle_show_using', {$brand.id})" /></td>
      <td align="center">{$brand.station}</td>
      <td align="center">
        <a href="oil_card.php?act=edit&id={$brand.id}" title="{$lang.edit}">{$lang.edit}</a> |
        <a href="javascript:;" onclick="listTable.remove({$brand.id}, '{$lang.drop_confirm}')" title="{$lang.edit}">{$lang.remove}</a> 
      </td>
    </tr>
    {foreachelse}
    <tr><td class="no-records" colspan="10">{$lang.no_records}</td></tr>
    {/foreach}
    <tr>
      <td align="right" nowrap="true" colspan="6">
      {include file="page.htm"}
      </td>
    </tr>
  </table>

{if $full_page}
<!-- end brand list -->
</div>
</form>

